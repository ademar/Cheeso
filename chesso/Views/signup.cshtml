
@{
    Layout = "layout.cshtml";
}
<form class="form-signin" method="post">
    <h2 class="form-signin-heading">Please sign up</h2>
    <label for="displayName" class="sr-only">Display Name</label>
    <input type="text" id="displayName" name="displayName" class="form-control" placeholder="Your Display Name" required autofocus>
    <label for="email" class="sr-only">Email address</label>
    <input type="email" id="email" name="email" class="form-control" placeholder="Your Email address" required autofocus>
    <label for="password" class="sr-only">Password</label>
    <input type="password" id="password" name="password" class="form-control" placeholder="Your Password" required>
    <button class="btn btn-lg btn-primary btn-block" type="submit">Sign Up!</button>
</form>
